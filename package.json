{
    "name": "node-sqlite-kv",
    "description": "Key-value store with node:sqlite",
    "version": "0.3.1",
    "repository": {
        "url": "https://github.com/e60m5ss/node-sqlite-kv"
    },
    "author": {
        "name": "e60m5ss",
        "url": "https://github.com/e60m5ss"
    },
    "main": "./dist/index.cjs",
    "module": "./dist/index.mjs",
    "types": "./dist/index.d.mts",
    "engineStrict": true,
    "engines": {
        "node": ">=22.5.0"
    },
    "scripts": {
