{
    "name": "node-sqlite-kv",
    "description": "Key-value store with node:sqlite",
    "version": "0.2.0",
    "repository": {
        "url": "https://github.com/e60m5ss/node-sqlite-kv"
    },
    "author": {
        "name": "e60m5ss",
        "url": "https://github.com/e60m5ss"
    },
    "main": "./dist/index.js",
    "module": "./dist/index.mjs",
    "types": "./dist/index.d.ts",
    "engineStrict": true,
    "engines": {
        "node": ">=22.5.0"
    },
    "scripts": {
        "build": "tsup",
        "format": "prettier ./src --write --ignore-path=.prettierignore",
        "lint": "tsc --noEmit; prettier ./src --check --ignore-path=.prettierignore",
        "prepublish": "tsup"
    },
    "prettier": {
        "jsxSingleQuote": false,
        "printWidth": 85,
        "semi": true,
        "singleQuote": false,
        "tabWidth": 4,
        "trailingComma": "es5",
        "useTabs": false
    },
    "devDependencies": {
        "@types/node": "^25.1.0",
        "prettier": "^3.8.1",
        "tsup": "^8.5.1",
        "typescript": "^5.9.3"
    }
}
