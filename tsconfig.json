{
    "$schema": "https://json.schemastore.org/tsconfig",
    "compilerOptions": {
        "paths": {
            "@/*": ["./src/*"]
        },
        "lib": ["ESNext"],
        "target": "ESNext",
        "moduleResolution": "Bundler",
        "module": "ESNext",
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "skipLibCheck": true,
        "verbatimModuleSyntax": true,
        "noUncheckedIndexedAccess": true,
        "removeComments": false,
        "allowJs": true,
        "strict": true,
        "noEmit": true,
        "declaration": false
    },
    "include": ["src", "cli/**/*.mjs"],
    "exclude": ["dist", "node_modules", ".development", "**/*.DS_Store*"]
}
